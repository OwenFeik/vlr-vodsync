{
    "manifest_version": 2,
    "name": "Vodsync for VLR.gg",
    "version": "1.0",
    "description": "Add Twitch costreams to VLR.gg",
    "permissions": [
        "storage",
        "https://gql.twitch.tv/gql"
    ],
    "content_scripts": [
            {
            "matches": ["*://*.vlr.gg/*"],
            "js": ["script.js"]
        }
    ],
    "browser_action": {
        "default_title": "Vodsync for VLR.gg Settings",
        "default_popup": "settings.html"
    }
}