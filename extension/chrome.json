{
    "manifest_version": 3,
    "name": "Vodsync for VLR.gg",
    "version": "1.0",
    "description": "Add Twitch costreams to VLR.gg",
    "permissions": ["storage"],
    "host_permissions": ["https://gql.twitch.tv/gql"],
    "content_scripts": [
        {
            "matches": ["*://*.vlr.gg/*"],
            "js": ["common.js", "script.js"],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "settings.html"
    },
    "action": {
        "default_title": "Vodsync for VLR.gg Settings",
        "default_popup": "settings.html"
    }
}